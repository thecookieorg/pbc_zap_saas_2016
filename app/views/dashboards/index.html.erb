<% if current_user.name.blank? %>
	<h2>Please finish your profile <%= link_to 'here', edit_user_registration_path, class: "btn btn-success" %></h2>
<% end %>


	<div class="row">
		<div class="col-md-6">
			<h3>My Company Info</h3>
			<% @companies = Company.all %>
			<% if @companies.blank? %>
				<%= link_to "Create Your Company", new_company_path, class: "btn btn-success" %>
			<% else %>
				<table class="table well well-lg">
					<thead>
						<tr>
							<th>Company Name</th>
							<th>Address</th>
							<th>Phone</th>
							<th>Fax</th>
						</tr>
					</thead>
					<% @companies.each do |company| %>
						<tr>
							<td><%= company.name %></td>
							<td><%= company.address %></td>
							<td><%= company.phone %></td>
							<td><%= company.fax %></td>
				      </tr>
					<% end %>
				</table>
			<% end %>
		</div>
		<div class="col-md-6">
			<h3>My Client Info</h3>
			<% @client_companies = ClientCompany.all %>
			<% if @client_companies.blank? %>
				<%= link_to "Create Your Client", new_client_company_path, class: "btn btn-success" %>
			<% else %>
				<table class="table well well-lg">
					<thead>
						<tr>
							<th>Company Name</th>
							<th>Address</th>
							<th>Phone</th>
							<th>Fax</th>
						</tr>
					</thead>
					<% @client_companies.each do |client_company| %>
						<tr>
							<td><%= client_company.name %></td>
							<td><%= client_company.address %></td>
							<td><%= client_company.phone %></td>
							<td><%= client_company.fax %></td>
				      </tr>
					<% end %>
				</table>
			<% end %>
		</div>

		<div class="row">
			<div class="col-md-6">
				<h3>My Team</h3>
				
				<table class="table table-hover">
					<thead>
					    <tr>
					      <th>Name</th>
					      <th>Email</th>
					      <th>Role</th>
					      <th>Approved?</th>
					    </tr>
					  </thead>
					<tbody>
					    <% @users = User.all %>
						<% @users.each do |user| %>
					      <tr>
					        <td><%= user.name %></td>
					        <td><%= user.email %></td>
					        <td><%= user.accountant_role %></td>
					        <td>Yes</td>
					      </tr>
					    <% end %>
					</tbody>
				</table>
				<%= link_to 'Invite Colleague', new_user_invitation_path, class: "btn btn-success" %>
			</div>
			<div class="col-md-6">
				<h3>My Clients Team</h3>
				<table class="table table-hover">
					<thead>
					    <tr>
					      <th>Name</th>
					      <th>Surname</th>
					      <th>Email</th>
					      <th>Role</th>
					      <th>Approved?</th>
					    </tr>
					  </thead>
					<tbody>
					    <% @clients = Client.all %>
						<% @clients.each do |client| %>
					      <tr>
					        <td><%= client.first_name %></td>
					        <td><%= client.last_name %></td>
					        <td><%= client.email %></td>
					        <td><%= client.accountant_role %></td>
					        <td>Yes</td>
					      </tr>
					    <% end %>
					</tbody>
				</table>
			</div>
		</div>