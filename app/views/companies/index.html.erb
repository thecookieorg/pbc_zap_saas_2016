<div class="container">
  <div class="row">
    <div class="col-md-12">
      <% if @companies.size == 0 %>
          <%= link_to 'Add Your Company', new_company_path, class: "btn btn-success" %>
      <% end %>

      <% if @companies.size != 0 %>
        <table class="table table-striped table-hover ">
          <thead>
            <tr>
              <th>Name</th>
              <th>Address</th>
              <th>Phone</th>
              <th>Fax</th>
              <th>Email</th>
              <th>Website</th>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody>
            <% @companies.each do |company| %>
              <tr>
                <td><%= company.name %></td>
                <td><%= company.address %></td>
                <td><%= company.phone %></td>
                <td><%= company.fax %></td>
                <td><%= company.email %></td>
                <td><%= company.website %></td>
                <td><%= link_to 'Edit', edit_company_path(company) %></td>
                <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
      </div>
    </div>
  </div>


